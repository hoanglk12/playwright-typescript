# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf
.dockerignore text eol=lf
.env* text eol=lf

# Docker
Dockerfile text eol=lf
docker-compose*.yml text eol=lf

# GitHub
.github/**/*.md text eol=lf
.github/**/*.yml text eol=lf

# VS Code
.vscode/*.json text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
